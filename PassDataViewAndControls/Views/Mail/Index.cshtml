@{
    ViewData["Title"] = "Logger";
}

<h1 class="justify-content-center bg-info text-white">
    Mail Form
</h1>
<div class="row">
    <div class="col-6">
        <form asp-action="Index" method="post">
            <div id="header">
                Fill the Form
            </div>
            <div id="mailTable">
                <table class="table table-bordered table-hover">
                    <tr>
                        <td>E-mail</td>
                        <td><b> : </b></td>
                        <td><input type="email" name="txtEmail" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>Subject</td>
                        <td><b> : </b></td>
                        <td><input type="text" name="txtSubject" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>Message</td>
                        <td><b> : </b></td>
                        <td><textarea placeholder="Type Message..." type="text" name="txtMessage" rows="15" cols="50" class="form-control"></textarea></td>
                    </tr>
                    <tr>
                        <td><input type="submit" name="sendMail" value="Send Mail"  class="btn btn-success align-content-center" /></td>
                    </tr>
                </table>
            </div>
        </form>
        <br />
        <br />
        <div class="row">
            <div style="height:200px" class="col-lg-6 bg-danger text-white">@ViewBag.Result</div>
        </div>
    </div>
</div>