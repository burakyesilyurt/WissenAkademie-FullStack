@{
    ViewData["Title"] = "Order Info";
}

<div class="justify-content-center">
    <div class="card">
        <div class="card-header">
            <p class="text-center">
                Order Info
            </p>
        </div>
        <div class="card-body">
            <dl>
                <dt>Order Id: </dt>
                <dd>@ViewBag.ID</dd>
            </dl>
            <dl>
                <dt>Order Name: </dt>
                <dd>@ViewBag.Name</dd>
            </dl>
            <dl>
                <dt>Order Price: </dt>
                <dd>@ViewBag.Price</dd>
            </dl>
        </div>
    </div>
</div>